<Window x:Class="PaintBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PaintBox – Лаба 1" Height="450" Width="800">
    <DockPanel>
        <!-- Верхняя панель с кнопками -->
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top"
                    Background="#EEE"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,5">
            <Button Name="BtnLine" Content="Line" Margin="5" Width="80" Height="30"
                    Click="BtnLine_Click"/>
            <Button Name="BtnRectangle" Content="Rectangle" Margin="5" Width="80" Height="30"
                    Click="BtnRectangle_Click"/>
            <Button Name="BtnEllipse" Content="Ellipse" Margin="5" Width="80" Height="30"
                    Click="BtnEllipse_Click"/>
            <Button Name="BtnPolygon" Content="Polygon" Margin="5" Width="80" Height="30"
                    Click="BtnPolygon_Click"/>
            <!-- ДОБАВЛЯЕМ кнопку Polyline -->
            <Button Name="BtnPolyline" Content="Polyline" Margin="5" Width="80" Height="30"
                    Click="BtnPolyline_Click"/>
        </StackPanel>

        <!-- Область рисования -->
        <Canvas Name="DrawingCanvas"
                Background="White"
                Margin="5"
                ClipToBounds="True"/>
    </DockPanel>
</Window>
